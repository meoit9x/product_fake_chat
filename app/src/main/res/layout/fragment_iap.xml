<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:paddingTop="@dimen/_20sdp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_15sdp"
            android:paddingVertical="@dimen/_15sdp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/back_2" />

        <nat.pink.base.custom.view.ExtTextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp"
            app:textViewFontAssetName="@string/font_bold" />



    </androidx.appcompat.widget.LinearLayoutCompat>
    <ImageView
        android:layout_marginTop="@dimen/_minus15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_iap"/>
    <TextView

        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginHorizontal="@dimen/_40sdp"
        android:textSize="@dimen/_17sdp"
        android:text="@string/title_iap"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_benefit_check"
                />
            <TextView
                android:id="@+id/benefits_coin"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/sf_pro_display"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iap_benefits_coin_1m"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_benefit_check"
                />
            <TextView
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/sf_pro_display"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iap_benefits_ads_1m"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_benefit_check"
                />
            <TextView
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/sf_pro_display"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iap_benefits_rank"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_benefit_check"
                />
            <TextView
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/sf_pro_display"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iap_benefits_smooth"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_benefit_check"
                />
            <TextView
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/sf_pro_display"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iap_benefits_chat_group"
                />
        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_13sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp">
        <ImageView
            android:src="@drawable/bg_gradient_iap"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ImageView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_13sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp">
        <ImageView
            android:src="@drawable/bg_gradient_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ImageView>

    </androidx.cardview.widget.CardView>

</LinearLayout>