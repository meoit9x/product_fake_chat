<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/img_bg"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ob_1_bg"
        android:layout_width="fill_parent"
        android:scaleX="1.4"
        android:scaleY="1.4"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <ImageView
        android:id="@+id/img_intro"
        android:layout_marginTop="16dp"
        android:src="@drawable/ob_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/img_intro"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:id="@+id/tv_title"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/sf_pro_display"
        android:text="Plan Your Trip"
        android:textAlignment="center"
        android:textColor="@color/color_212121"
        android:textSize="28sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_title"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:id="@+id/tv_description"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/sf_pro_display"
        android:text="Choose your destination, plan your trip. \nPick the best place to your holiday"
        android:textAlignment="center"
        android:textColor="@color/color_212121"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>