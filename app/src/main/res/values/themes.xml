<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Base" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Base.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="splash_screen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/color_f2f2f2</item>
        <item name="colorControlHighlight">@color/colorPrimary_10</item>
        <item name="colorAccent">@color/color_0084f0</item>
        <item name="android:windowBackground">@drawable/bg_white</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/WindowTransition</item>
    </style>

    <style name="WindowTransition">
        <item name="android:activityOpenEnterAnimation">@anim/pull_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/push_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/pull_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/push_out_right</item>
    </style>

    <style name="Theme.Base.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Base.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>